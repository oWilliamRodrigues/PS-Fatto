@model PS_Fatto.Models.Tarefa

@{
    ViewData["Title"] = "Excluir Tarefa";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm border-danger">
                <div class="card-header bg-danger text-white">
                    <h3 class="mb-0">Excluir Tarefa</h3>
                </div>
                <div class="card-body">
                    <h5 class="text-secondary mb-4">Tem certeza que deseja apagar esta tarefa? Esta ação não pode ser desfeita.</h5>

                    <dl class="row">
                        <dt class="col-sm-4 fw-bold">@Html.DisplayNameFor(model => model.Nome)</dt>
                        <dd class="col-sm-8 text-dark">@Html.DisplayFor(model => model.Nome)</dd>

                        <dt class="col-sm-4 fw-bold">@Html.DisplayNameFor(model => model.Custo)</dt>
                        <dd class="col-sm-8 text-success">R$ @Model.Custo.ToString("N2")</dd>

                        <dt class="col-sm-4 fw-bold">@Html.DisplayNameFor(model => model.DataLimite)</dt>
                        <dd class="col-sm-8 text-dark">@Model.DataLimite.ToString("dd/MM/yyyy")</dd>

                        <dt class="col-sm-4 fw-bold">@Html.DisplayNameFor(model => model.Ordem)</dt>
                        <dd class="col-sm-8 text-muted">@Html.DisplayFor(model => model.Ordem)</dd>
                    </dl>

                    <hr />

                    <form asp-action="Delete" class="d-flex gap-2">
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="btn btn-danger px-4 shadow-sm">Confirmar Exclusão</button>
                        <a asp-action="Index" class="btn btn-outline-secondary px-4 shadow-sm">Cancelar e Voltar</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>