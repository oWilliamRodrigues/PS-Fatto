@model PS_Fatto.Models.Tarefa

@{
    ViewData["Title"] = "Editar Tarefa";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm p-4 border-warning">
                <h2 class="text-warning text-center">Editar Tarefa</h2>
                <hr />
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="Ordem" />

                    <div class="form-group mb-3">
                        <label asp-for="Nome" class="control-label fw-bold"></label>
                        <input asp-for="Nome" class="form-control" />
                        <span asp-validation-for="Nome" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Custo" class="control-label fw-bold"></label>
                        <div class="input-group">
                            <span class="input-group-text">R$</span>
                            <input asp-for="Custo" class="form-control" type="number" step="0.01" min="0" />
                        </div>
                        <span asp-validation-for="Custo" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="DataLimite" class="control-label fw-bold"></label>
                        <input asp-for="DataLimite" class="form-control" type="date" />
                        <span asp-validation-for="DataLimite" class="text-danger"></span>
                    </div>

                    <div class="form-group d-grid gap-2 mt-4">
                        <input type="submit" value="Salvar Alterações" class="btn btn-primary" />
                        <a asp-action="Index" class="btn btn-outline-secondary">Cancelar</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}